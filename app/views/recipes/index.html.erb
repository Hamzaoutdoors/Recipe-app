<div class="m-3">
    <%= render "_partials/modals/recipe-modal" %><br>
</div>
<h1 class="m-3">Your List Of Recipes</h1>
<div id="recipes">
  <%if @recipes.empty?%>
     <p class="m-3">Your recipes list is empty try to add new recipe</p>
  <%else%>
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <p>
      <%= link_to "Show this recipe", recipe: recipe %>
    </p>
  <% end %>
 <% end %>
</div>
